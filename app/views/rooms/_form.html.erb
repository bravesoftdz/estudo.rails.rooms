<% if @room.errors.any? %>
    <div id="error_explanation">
        <h2>Há errors no formulário, por favor verifique.</h2>
    </div>
<% end %>

<%= form_for(@room) do |f| %> 
    <p>
        <%= f.label :title %><br>
        <%= f.text_field :title %>
        <%= error_tag @room, :title %>
    </p>

    <p>
        <%= f.label :location %><br>
        <%= f.text_field :location %>
        <%= error_tag @room, :location %>
    </p>

    <p>
        <%= f.label :description %><br>
        <%= f.text_field :description %>
        <%= error_tag @room, :description %>
    </p>
    
    <p>
        <%= f.submit "Enviar", :disable_with => 'Enviando...' %>
    </p>  
<% end %>
